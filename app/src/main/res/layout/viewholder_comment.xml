<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/bg_game_page_comment"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="30dp"
    android:paddingTop="10dp"
    android:paddingBottom="5dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user"
            android:contentDescription="@string/hint_user_name">

        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/tv_comment_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hint_user_name"
                android:layout_weight="1"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/comment_star_1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/star_full" />

                <ImageView
                    android:id="@+id/comment_star_2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/star_full" />

                <ImageView
                    android:id="@+id/comment_star_3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/star_full" />

                <ImageView
                    android:id="@+id/comment_star_4"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/star_full" />

                <ImageView
                    android:id="@+id/comment_star_5"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/star_full" />

                <TextView
                    android:id="@+id/tv_comment_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/label_comment_date"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_comment_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="5dp"
    android:text="@string/comment_text"
    android:maxLines="3"
    android:ellipsize="end"
    android:textSize="12sp"/>

</androidx.appcompat.widget.LinearLayoutCompat>