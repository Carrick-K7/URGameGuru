<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.urgameguru" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.URGameGuru" >
        <meta-data
            android:name="firebase_performance_logcat_enabled"
            android:value="true" />
        <activity
            android:name=".activity.ArticlePageActivity"
            android:exported="false" />
        <activity
            android:name=".activity.UploadMediaActivity"
            android:exported="true" />
        <activity
            android:name=".activity.ShowImageActivity"
            android:exported="true" />
        <activity
            android:name=".activity.ShowArticleActivity"
            android:exported="true"
            android:label="@string/title_activity_article_list"
            android:theme="@style/Theme.URGameGuru.NoActionBar" />
        <activity
            android:name=".activity.LoginActivity"
            android:exported="true"
            android:label="@string/title_login_activity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AddGameActivity"
            android:exported="true"
            android:label="AddGameActivity" />
        <activity
            android:name=".activity.AddGameDetailActivity"
            android:exported="true"
            android:label="AddGameDetailActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:label="@string/app_name" />
        <activity android:name=".activity.MyGameDetailActivity" />
        <activity android:name=".activity.GameDetailActivity" />
        <activity android:name=".activity.ShowVideoActivity"/>
        <activity android:name=".activity.AddCommentActivity"/>
    </application>

</manifest>